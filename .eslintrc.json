{
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [1, 4, {"SwitchCase": 1, "MemberExpression": "off"}],
        "quotes": [1,"single", { "allowTemplateLiterals": true }],
        "linebreak-style": [2,"unix"],
        "semi": [1,"always"],
        "no-console": [1],
        "no-var": [1]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides" : [
        {
            "files": "dashboard/src/**",
            "env" : {
                "browser": true,
                "node": false
            },
            "globals": {
                "m" : true,
                "require" : true,
                "fetch" : true
            }
        },
        {
            "files":"server/bank/**",
            "rules": {
                "no-mixed-spaces-and-tabs": "off"
            },
            "env": {
                "browser":true,
                "es6":false,
                "node":false,
                "amd":true
            }
        }
    ]
}
